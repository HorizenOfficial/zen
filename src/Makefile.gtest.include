TESTS += sic-gtest
noinst_PROGRAMS += sic-gtest

# tool for generating our public parameters.
# test_checktransaction.cpp MUST be before
# any test that calls SelectParams().
sic_gtest_SOURCES = \
	gtest/main.cpp \
	gtest/utils.cpp \
	gtest/test_checktransaction.cpp \
	gtest/json_test_vectors.cpp \
	gtest/json_test_vectors.h \
        gtest/test_forkmanager.cpp \
        gtest/test_checkblockdelay.cpp
# These tests are order-dependent, because they
# depend on global state (see #1539)
if ENABLE_WALLET
sic_gtest_SOURCES += \
	wallet/gtest/test_wallet_zkeys.cpp
endif
sic_gtest_SOURCES += \
	gtest/test_tautology.cpp \
	gtest/test_checkblock.cpp \
	gtest/test_deprecation.cpp \
	gtest/test_equihash.cpp \
	gtest/test_httprpc.cpp \
	gtest/test_joinsplit.cpp \
	gtest/test_keystore.cpp \
	gtest/test_libzcash_utils.cpp \	
	gtest/test_noteencryption.cpp \
	gtest/test_mempool.cpp \
	gtest/test_merkletree.cpp \
	gtest/test_metrics.cpp \
	gtest/test_miner.cpp \
	gtest/test_pow.cpp \
	gtest/test_random.cpp \
	gtest/test_rpc.cpp \
	gtest/test_getblocktemplate.cpp \
	gtest/test_timedata.cpp \
	gtest/test_transaction.cpp \
	gtest/test_txid.cpp \
	gtest/test_validation.cpp \
	gtest/test_circuit.cpp \
	gtest/test_proofs.cpp \
	gtest/test_paymentdisclosure.cpp \
	gtest/test_relayforks.cpp 

if ENABLE_WALLET
sic_gtest_SOURCES += \
	wallet/gtest/test_wallet.cpp \
	wallet/gtest/test_deadlock.cpp
endif

# sic_gtest_CPPFLAGS = $(AM_CPPFLAGS) -DMULTICORE -fopenmp -DBINARY_OUTPUT -DCURVE_ALT_BN128 -DSTATIC -DBITCOIN_TX $(BITCOIN_INCLUDES)
sic_gtest_CPPFLAGS = $(AM_CPPFLAGS)
#if HAVE_OPENMP
#sic_gtest_CPPFLAGS += -DMULTICORE -fopenmp
#endif
sic_gtest_CPPFLAGS += -DBINARY_OUTPUT -DCURVE_ALT_BN128 -DSTATIC $(BITCOIN_INCLUDES)

sic_gtest_CXXFLAGS = $(AM_CXXFLAGS) $(PIE_FLAGS)
sic_gtest_LDADD = -lgtest -lgmock $(LIBBITCOIN_SERVER) $(LIBBITCOIN_CLI) $(LIBBITCOIN_COMMON) $(LIBBITCOIN_UTIL) $(LIBBITCOIN_CRYPTO) $(LIBUNIVALUE) $(LIBLEVELDB) $(LIBMEMENV) \
  $(BOOST_LIBS) $(BOOST_UNIT_TEST_FRAMEWORK_LIB) $(LIBSECP256K1)
if ENABLE_ZMQ
sic_gtest_LDADD += $(LIBBITCOIN_ZMQ) $(ZMQ_LIBS)
endif

if ENABLE_WALLET
sic_gtest_LDADD += $(LIBBITCOIN_WALLET)
endif

sic_gtest_LDADD += $(LIBZCASH_CONSENSUS) $(BDB_LIBS) $(SSL_LIBS) $(CRYPTO_LIBS) $(EVENT_PTHREADS_LIBS) $(EVENT_LIBS) $(LIBZCASH) $(LIBSICASH) $(LIBSNARK) $(LIBZCASH_LIBS)

if ENABLE_PROTON
sic_gtest_LDADD += $(LIBBITCOIN_PROTON) $(PROTON_LIBS)
endif

sic_gtest_LDFLAGS = $(RELDFLAGS) $(AM_LDFLAGS) $(LIBTOOL_APP_LDFLAGS) -static

sic-gtest_check: sic-gtest FORCE
	./sic-gtest

sic-gtest-expected-failures: sic-gtest FORCE
	./sic-gtest --gtest_filter=*DISABLED_* --gtest_also_run_disabled_tests
